<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="acceptedlist"
            type="com.example.tailor.kandoraexpress.order.modal.OrderList"/>

        <variable
            name="dispatchstatuschanges"
            type="com.example.tailor.kandoraexpress.order.dispatch.DispatchItemstatusChanges"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/order_idno"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"

                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    app:font="@{@string/source_sans_text_regulart}"/>



                <TextView
                    android:layout_marginStart="15dp"
                    android:id="@+id/customer_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_name"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    app:font="@{@string/source_sans_text_regulart}"/>


                <TextView
                    android:id="@+id/order_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Order_summary"
                    android:textSize="14sp"
                    android:maxLines="4"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    app:font="@{@string/source_sans_text_regulart}"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/prices"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Order_summary"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    app:font="@{@string/source_sans_text_regulart}"/>



                <TextView
                    android:layout_marginStart="15dp"
                    android:id="@+id/status_review"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_arrow_down_white"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingEnd="10dp"
                    android:text="Dispatch"
                    android:textAlignment="textStart"
                    android:onClick="@{dispatchstatuschanges::OnClickstatuschanges}"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    tools:ignore="RtlCompat"
                    app:font="@{@string/source_sans_text_regulart}"/>


                <TextView
                    android:id="@+id/order_viewclick"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/view"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:onClick="@{dispatchstatuschanges::OnClickorderinfo}"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_rect_black_bg"
                    app:font="@{@string/source_sans_text_regulart}"/>


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6eaee"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>
</layout>