<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="imagePreviewItemVM"
            type="com.example.tailor.kandoraexpress.products.addproducts.viewmodal.ImagePreviewItemVM"/>
        <variable
            name="imageURI"
            type="com.example.tailor.kandoraexpress.products.addproducts.modal.ImageURI"/>

    </data>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@{imageURI.uri}"
        android:scaleType="centerCrop"/>
</FrameLayout>
</layout>