<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_order_success"/>



                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR ORDER HAS BEEN PLACED SUCCESSFULLY"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        app:font="@{@string/source_sans_text_semibold}" />



                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYMENT WAS PROCESSED AND YOUR ORDER NUMBER IS"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        app:font="@{@string/source_sans_text_light}" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#000000034"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        app:font="@{@string/source_sans_text_semibold}" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:text="Generate Invoice"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@color/blue"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:font="@{@string/source_sans_text_semibold}"
                        android:layout_marginBottom="10dp"/>




                </LinearLayout>
                
            </android.support.v7.widget.CardView>
            
        </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>